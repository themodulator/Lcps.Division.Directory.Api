@model IEnumerable<Lcps.Division.Directory.Repository.MembershipScope>

<table class="table table-striped table-hover table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Caption)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <span title="@item.LiteralName (@item.BinaryValue)">@item.Caption</span>
            </td>
            <td>
                <a href="@Url.Action("Edit", "MembershipScopes", new { id = item.MembershipScopeId })"><i class="fa fa-pencil"></i></a>
                <a href="@Url.Action("Delete", "MembershipScopes", new { id = item.MembershipScopeId })"><i class="fa fa-remove"></i></a>
            </td>
        </tr>
    }
</table>

